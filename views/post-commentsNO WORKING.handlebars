<div class="container row">
<div class="comments">
  {{#each this}}
    <div class="card post comment-box">
    <div class="card-body post-body">
        <div class="card-text comment-text">
            {{comment_content}}
        </div>
        <div class="comment-author">
            -{{user.username}}, {{format_date post_date}}
        </div>
    </div>
    </div>
  {{/each}}
</div>
</div>